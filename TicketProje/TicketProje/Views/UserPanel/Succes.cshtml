@{
    Layout = null;
}
@using TicketProje.Models.Vmodel
@model UserIdView
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilet Başarılı!</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(135deg, #ffcc00, #ff0066); /* Canlı bir arka plan */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        p {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .btn {
            padding: 15px 30px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.2rem;
            transition: transform 0.2s ease;
        }

            .btn:hover {
                transform: scale(1.1);
                background-color: #218838;
            }

        .details {
            margin-top: 30px;
            font-size: 1rem;
            color: #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bilet Alma İşlemin Başarılı!</h1>
        <p>Helal olsun dayıoğlu! 🎉</p>
        <button class="btn" onclick="window.location.href='/UserPanel/Main/@Model.UserId'">Ana Sayfaya Dön</button>

        <div class="details">
            <p>İşlem ID: #789123456</p>
            <p>Koltuk No: A12</p>
            <p>Biletiniz hesabınıza eklenmiştir</p>
        </div>
    </div>
</body>
</html>
